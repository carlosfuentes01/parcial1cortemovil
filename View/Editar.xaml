<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="llamada.View.Editar"
             Title="Editar">
    <VerticalStackLayout>
        <Label 
            Text="Modifique el contacto"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            Text="Nombre"
            />
        <Entry x:Name="nombre"
            Placeholder="Carlos"

            />

        <Label
            
            Text="telefono"
            />
        <Entry 
            x:Name="tel"
            Placeholder="123546"

            />

        <Label
    Text="imagen"
    />
        <Image x:Name="imagensita"
            HeightRequest="200">
            
        </Image>
        <Button Text="Cambiar foto"
                Clicked="Button_Clicked_1"/>
        <Button Text="Modificar contacto"
                Clicked="Button_Clicked">

        </Button>
    </VerticalStackLayout>
</ContentPage>