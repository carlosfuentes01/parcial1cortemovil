<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="llamada.Plantilla"
             
             Title="{Binding contactos.Nombre}">
    <VerticalStackLayout>

            
        <HorizontalStackLayout>
            <ImageButton Source="edit_1159633.png"
             HeightRequest="20"
             Clicked="ImageButton_Clicked"
             HorizontalOptions="End"
             Aspect="AspectFit"
             >

            </ImageButton>
            <ImageButton Source="borrar.png"
                        HeightRequest="20"
                        Clicked="ImageButton_Clicked_1"
                        HorizontalOptions="End"
                        Aspect="AspectFit">

            </ImageButton>
        </HorizontalStackLayout>

        <Image Source="{Binding contactos.imagen}"
               HeightRequest="150"
               Margin="30"
               Aspect="AspectFit">
            
        </Image>

        <Button Text="Llamar"
                Clicked="Button_Clicked_llamada"></Button>
        
        
    </VerticalStackLayout>
</ContentPage>